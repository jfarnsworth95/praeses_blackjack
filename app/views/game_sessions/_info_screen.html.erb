<% @players[0..-2].each do |player| %>
    <h4><%= player.name %>: $<%= player.money %> <% if player.current_bet > 0 %> (<%= player.current_bet %><% if player.side_bet > 0 %> [ <%= player.side_bet %> ] <% end %>) <% end %></h4>
    <% if @cards.where(player: player).count > 0 %>
        <%= render partial: "show_cards", locals: {player: player} %>
    <% end %>
<% end %>

<% dealer = @players[-1] %>
<h4><%= dealer.name %>
<% if @cards.where(player:dealer).count > 0 %>
    <%= render partial: "show_cards", locals: {player: dealer} %>
<% end %>